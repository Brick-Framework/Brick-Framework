<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.brick</groupId>
	<artifactId>framework</artifactId>
	<version>1.0.1</version>
	<packaging>jar</packaging>

	<name>com.brick.framework</name>
	<url>http://maven.apache.org</url>

	<distributionManagement>
		<repository>
			<id>github</id>
			<url>https://maven.pkg.github.com/Brick-Framework/Brick-Framework</url>
		</repository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>github-utilities</id>
			<url>https://maven.pkg.github.com/Brick-Framework/Brick-Utilities</url>
		</repository>
		<repository>
			<id>github-logger</id>
			<url>https://maven.pkg.github.com/Brick-Framework/Brick-Logger</url>
		</repository>
		<repository>
			<id>github-openapi</id>
			<url>https://maven.pkg.github.com/Brick-Framework/Brick-OpenAPI</url>
		</repository>
	</repositories>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<sonar.organization>brick-framework</sonar.organization>
	</properties>


	<dependencies>

		<dependency>
			<groupId>org.apache.tomcat.embed</groupId>
			<artifactId>tomcat-embed-core</artifactId>
			<version>11.0.12</version>
		</dependency>

		<dependency>
			<groupId>tools.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>3.0.0</version>
		</dependency>

		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter</artifactId>
			<version>5.11.0</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<version>5.20.0</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.brick</groupId>
			<artifactId>logger</artifactId>
			<version>1.0.2</version>
		</dependency>

		<dependency>
			<groupId>com.brick</groupId>
			<artifactId>openapi</artifactId>
			<version>1.0.1</version>
		</dependency>

		<dependency>
			<groupId>com.brick</groupId>
			<artifactId>utilities</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.yaml</groupId>
					<artifactId>snakeyaml</artifactId>
				</exclusion>
			</exclusions>
			<version>1.0.10</version>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.8.10</version>
				<executions>
					<execution>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>report</id>
						<phase>verify</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
					<execution>
						<id>check</id>
						<goals>
							<goal>check</goal>
						</goals>
						<configuration>
							<rules>
								<rule>
									<element>BUNDLE</element>
									<limits>
										<limit>
											<counter>INSTRUCTION</counter>
											<value>COVEREDRATIO</value>
											<minimum>0.90</minimum>
										</limit>
									</limits>
								</rule>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
